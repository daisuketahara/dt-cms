<form action="" method="post">
    <div class="form-group">
        <label for="contact-phone">{% trans %}Phone{% endtrans %}<span class="red">*</span></label>
        <input id="contact-phone" name="contact-phone" class="form-control input-lg" type="text" required>
    </div>
    <div class="form-group">
        <label for="contact-email">{% trans %}Email{% endtrans %}<span class="red">*</span></label>
        <input id="contact-email" name="contact-email" class="form-control input-lg" type="email" required>
    </div>
    <div class="form-group">
        <label for="contact-message">{% trans %}Message{% endtrans %}<span class="red">*</span></label>
        <textarea id="contact-message" name="contact-message" class="form-control input-lg" rows="7" required></textarea>
    </div>
    <input name="submit" class="btn btn-lg bg-green white" value="{% trans %}Send{% endtrans %}" type="submit">
</form
