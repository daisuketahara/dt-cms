{% extends templateservice.getAdminTemplate() %}

{% set page_title='Pages' %}

{% block content %}
<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th class="width-100" data-column="id">{% trans %}ID{% endtrans %}</th>
            <th data-column="pageTitle">{% trans %}Title{% endtrans %}</th>
            <th data-column="publishDate">{% trans %}Publish date{% endtrans %}</th>
            <th data-column="status">{% trans %}Status{% endtrans %}</th>
        </tr>
    </thead>
</table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/paginator.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/modal.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/list.js') }}"></script>
    <script type="text/javascript">

        $('.table').dtTable({
            ajaxUrl: '/{{ app.request.locale }}/admin/page/ajaxlist/',
            addUrl: '/{{ app.request.locale }}/admin/page/add/',
            editUrl: '/{{ app.request.locale }}/admin/page/edit/',
            deleteUrl: '/{{ app.request.locale }}/admin/page/delete/',
            filter: true,
            limit: 15
        });

    </script>
{% endblock %}
