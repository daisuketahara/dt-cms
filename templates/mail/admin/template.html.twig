{% extends templateservice.getAdminTemplate() %}

{% block content %}
<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th class="width-100" data-column="id">{% trans %}ID{% endtrans %}</th>
            <th data-column="name">{% trans %}Email{% endtrans %}</th>
            <th data-column="subject">{% trans %}Subject{% endtrans %}</th>
        </tr>
    </thead>
</table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

        $('.table').dtTable({
            ajaxUrl: '/{{ app.request.locale }}/admin/mail/template/get/',
            editUrl: '/{{ app.request.locale }}/admin/mail/template/edit/',
            deleteUrl: '/{{ app.request.locale }}/admin/mail/template/delete/',
            filter: true,
            limit: 15
        });

    </script>
{% endblock %}
