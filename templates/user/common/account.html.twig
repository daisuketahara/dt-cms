<div class="row mb-4">
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-control-label required" for="form_firstname">{% trans %}Firstname{% endtrans %}</label>
            <input id="firstname" name="firstname" required="required" class="form-control" value="{{firstname}}" type="text">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-control-label required" for="form_lastname">{% trans %}Lastname{% endtrans %}</label>
            <input id="lastname" name="lastname" required="required" class="form-control" value="{{lastname}}" type="text">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-control-label required" for="form_email">{% trans %}Email{% endtrans %}</label>
            <input id="email" name="email" required="required" class="form-control" value="{{email}}" type="email">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-control-label ten required" for="form_phone">{% trans %}Phone{% endtrans %}</label>
            <input id="phone" name="phone" required="required" class="form-control" value="{{phone}}" type="phone">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-control-label" for="form_password">{% trans %}Password{% endtrans %}</label>
            <input id="password" name="password" class="form-control" type="password" value="{{password}}">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="form-control-label" for="form_password">{% trans %}Comfirm password{% endtrans %}</label>
            <input id="password_confirm" name="password-confirm" class="form-control" type="password" value="{{password}}">
        </div>
    </div>
</div>
<div class="form-group mb-4">
    <h4>{% trans %}User roles{% endtrans %}</h4>
    <div class="row">
    {% if roles %}
        {% for role in roles %}
        <div class="col-md-2">
            <div class="form-check">
                <label class="form-check-label">
                    {% set checked = '' %}
                    {% if roles_set %}
                        {% for roles_set_item in roles_set %}
                            {% if role.id == roles_set_item.roleId %}
                                {% set checked = ' checked="checked"' %}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    <input id="form_role_{{role.id}}" name="form_role[]" class="form-check-input" value="{{role.id}}" type="checkbox" {{checked}}>
                    {{ role.name|e }}
                </label>
            </div>
        </div>
        {% endfor %}
    {% endif %}
    </div>
</div>
<h4>{% trans %}Account settings{% endtrans %}</h4>
<div class="form-group">
    <div class="form-check">
        <label class="form-check-label">
            <input id="emailConfirmed" name="emailConfirmed" class="form-check-input" value="1" type="checkbox"{% if email_confirmed %} checked="checked"{% endif %}>
            {% trans %}Email confirmed{% endtrans %}
        </label>
    </div>
</div>
<div class="form-group">
    <div class="form-check">
        <label class="form-check-label">
            <input id="phoneConfirmed" name="phoneConfirmed" class="form-check-input" value="1" type="checkbox"{% if phone_confirmed %} checked="checked"{% endif %}>
            {% trans %}Phone confirmed{% endtrans %}
        </label>
    </div>
</div>
<div class="form-group">
    <div class="form-check">
        <label class="form-check-label">
            <input id="active" name="active" class="form-check-input" value="1" type="checkbox"{% if active %} checked="checked"{% endif %}>
            {% trans %}Active{% endtrans %}
        </label>
    </div>
</div>
