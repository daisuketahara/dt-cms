{% extends templateservice.getAdminTemplate() %}

{% block content %}

<ul class="nav nav-tabs mb-3">
    {% if locales %}
        {% for localeItem in locales %}
        <li class="nav-item">
            <a class="nav-link{% if locale %}{% if localeItem.id == locale.id %} active{% endif %}{% endif %}" href="/en/admin/block/edit/{{id}}/translate/{{localeItem.id}}/">{{localeItem.name}}</a>
        </li>
        {% endfor %}
    {% endif %}
</ul>
<div class="row">
    <div class="col-md-9">
        <form action="" method="post">
            <h3>{{name}}</h3>
            <p>{{description}}</p>
            <div class="form-group">
                <label>{% trans %}Content{% endtrans %}</label>
                <textarea id="block-content" name="block-content" class="form-control">{{content}}</textarea>
            </div>

            <button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/summernote/summernote-bs4.min.js') }}"></script>
    <script src="{{ asset('vendor/edit_area/edit_area_full.js') }}"></script>
    <script>

        jQuery('#block-content').summernote({
            minHeight: 400
        });
    </script>
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('vendor/summernote/summernote-bs4.css') }}" rel="stylesheet" />
    {{ parent() }}
{% endblock %}
