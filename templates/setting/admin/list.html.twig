{% extends 'admin.html.twig' %}

{% block body %}
<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th class="width-100" data-column="id">{% trans %}ID{% endtrans %}</th>
            <th data-column="settingKey">{% trans %}Key{% endtrans %}</th>
            <th data-column="settingValue">{% trans %}Value{% endtrans %}</th>
        </tr>
    </thead>
</table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/paginator.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/modal.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/list.js') }}"></script>
    <script type="text/javascript">

        $('.table').dtTable({
            ajaxUrl: '/{{ app.request.locale }}/admin/setting/ajaxlist',
            addUrl: '/{{ app.request.locale }}/admin/setting/add',
            editUrl: '/{{ app.request.locale }}/admin/setting/edit',
            deleteUrl: '/{{ app.request.locale }}/admin/setting/delete',
            filter: true,
            limit: 15
        });

    </script>
{% endblock %}
