{% extends templateservice.getAdminTemplate() %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vendor/intl-tel-input/js/intlTelInput.min.js') }}"></script>
    <script>
        jQuery('#phone').intlTelInput({
              nationalMode: true,
              initialCountry: "nl",
              preferredCountries: ['nl', 'be'],
              utilsScript: "{{ asset('vendor/intl-tel-input/js/utils.js') }}"
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('vendor/intl-tel-input/css/intlTelInput.css') }}">
{% endblock %}

{% block content %}
<form action="" method="post">
    <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="account-tab" data-toggle="tab" href="#account" role="tab" aria-controls="account" aria-selected="true">{% trans %}Account{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="information-tab" data-toggle="tab" href="#information" role="tab" aria-controls="information" aria-selected="false">{% trans %}Personal information{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="note-tab" data-toggle="tab" href="#note" role="tab" aria-controls="note" aria-selected="false">{% trans %}Notes{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="permission-tab" data-toggle="tab" href="#permission" role="tab" aria-controls="permission" aria-selected="false">{% trans %}Custom permissions{% endtrans %}</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="api-tab" data-toggle="tab" href="#api" role="tab" aria-controls="api" aria-selected="false">{% trans %}API{% endtrans %}</a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="account" role="tabpanel" aria-labelledby="account-tab">
            {{ include('user/common/account.html.twig') }}
            <div class="form-group">
                <button type="submit" id="save-account" name="save" class="btn-secondary btn">{% trans %}Save{% endtrans %}</button>
            </div>
        </div>
        <div class="tab-pane fade" id="information" role="tabpanel" aria-labelledby="information-tab">
            {{ include('user/common/information.html.twig') }}
            <div class="form-group">
                <button type="submit" id="save-information" name="save" class="btn-secondary btn">{% trans %}Save{% endtrans %}</button>
            </div>
        </div>
        <div class="tab-pane fade" id="note" role="tabpanel" aria-labelledby="note-tab">
            {{ include('user/common/note.html.twig') }}
            <div class="form-group">
                <button type="submit" id="save-note" name="save" class="btn-secondary btn">{% trans %}Save{% endtrans %}</button>
            </div>
        </div>
        <div class="tab-pane fade" id="permission" role="tabpanel" aria-labelledby="permission-tab">
            {{ include('permission/common/permission.html.twig') }}
            <div class="form-group">
                <button type="submit" id="save-permission" name="save" class="btn-secondary btn">{% trans %}Save{% endtrans %}</button>
            </div>
        </div>
        <div class="tab-pane fade" id="api" role="tabpanel" aria-labelledby="api-tab">
            {{ include('user/common/api.html.twig') }}
        </div>
    </div>
</form>
{% endblock %}
