{% extends templateservice.getAdminTemplate() %}

{% block content %}
<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th class="width-100" data-column="id">{% trans %}ID{% endtrans %}</th>
            <th data-column="original">{% trans %}Text{% endtrans %}</th>
            <th data-column="complete">{% trans %}Complete{% endtrans %}</th>
        </tr>
    </thead>
</table>
<a href="/{{ app.request.locale }}/admin/translation/generate/" class="btn btn-secondary">{% trans %}Generate translation files{% endtrans %}</a>
<a href="/{{ app.request.locale }}/admin/translation/populate/" class="btn btn-secondary">{% trans %}Get missing translations{% endtrans %}</a>
<a href="/{{ app.request.locale }}/admin/translation/export/" class="btn btn-secondary" data-disable-loader="1">{% trans %}Export{% endtrans %}</a>
<form action="/{{ app.request.locale }}/admin/translation/import/" class="form-inline d-inline-block">
    <input type="file" class="d-none">
    <button type="submit" name="submit" class="btn btn-secondary">{% trans %}Import{% endtrans %}</button>
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

        $('.table').dtTable({
            ajaxUrl: '/{{ app.request.locale }}/admin/translation/get/',
            addUrl: '/{{ app.request.locale }}/admin/translation/add/',
            editUrl: '/{{ app.request.locale }}/admin/translation/edit/',
            view: false,
            filter: true,
            limit: 15
        });

    </script>
{% endblock %}
